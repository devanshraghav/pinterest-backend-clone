<main>
  <form hidden action="/dpupload" id="uploadDpForm" method="post" enctype="multipart/form-data">
    <input type="file" name="dp"/>
  </form>
  <div class="section1">
    <div class="profile-dp">
      <span id="uploadDp" class="pencil-icon">
        <i class="ri-pencil-fill pencil"></i>
      </span>

      <div class="dp">
        <img
          src="/images/uploads/<%=user.dp%>"
          alt=""
          class="profile-pic"
        />
      </div>
    </div>

    <h2 class="fullname"><%= user.fullName%></h2>
    <h4 class="username">@<%= user.username%></h4>
    <a href="/edit" class="edit">Edit</a>
    <button class="pin-create" onclick="window.location.href= '/create'">Create</button>
  </div>

  <div class="section2">
    <p>Nothing to show...yet! Pins you create will live here.</p>

    <!-- <button class="pin-create">Create Pin</button> -->
  </div>

  <div class="pins">
    <div class="card">
      <div class="pin">
        <img
          src="https://plus.unsplash.com/premium_photo-1691852519423-1a8ade157faf?q=80&w=1374&auto=format&fit=crop&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D"
          alt="pin-image"
          class="pin-image"
        />
      </div>
      <h3 class="">All pins</h3>
      <h5>2 pins</h5>
    </div>
  </div>
</main>

