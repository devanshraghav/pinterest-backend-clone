<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Feeds</title>
    <link rel="stylesheet" href="/stylesheets/feed.css" />
  </head>
  <body>
    <!-- Header -->

    <nav>
      <div class="logo-image">
        <img
          src="https://i.pinimg.com/originals/d3/d1/75/d3d175e560ae133f1ed5cd4ec173751a.png"
          alt="pinterest-logo"
          class="logo"
        />
      </div>

      <div class="nav-links">
        <a href="/">Feed</a>
        <a href="/profile">Profile</a>
        <% if(login == true){%>
        <a href="/logout">Logout</a>
        <%} else { %>
        <a href="/signin">SignIn</a>
        <%} %>
      </div>
    </nav>

    <!-- Main Body -->
    <main>
      <div class="container">
        <div>
          <img
            src="https://images.unsplash.com/photo-1682695795557-17447f921f79?q=80&w=1470&auto=format&fit=crop&ixlib=rb-4.0.3&ixid=M3wxMjA3fDF8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D"
            alt="feeds"
            class="feed-img"
          />
          <p>Lorem ipsum dolor sit amet.</p>
        </div>

        <div class="card">
          <%post?.forEach(function (element){%>
          <div class="pin">
            <img src="/images/uploads/<%=element?.image%>" class="pin-image" />
          </div>
          <%})%>
        </div>
      </div>
    </main>

    <!-- Footer -->
    <% include ./partials/footer.ejs %>
  </body>
</html>
